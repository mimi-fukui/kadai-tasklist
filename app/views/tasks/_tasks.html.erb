<ul class="list-unstyled">
    <% tasks.each do |task| %>
        <li class="media mb-3">
            <div class="media-body">
                <div>
                    <p><%= task.user.name %>
                </div>
                <div>
                    <p><%= task.content %> (<%= task.status %>)</p>
                </div>
                <div>
                    <%= link_to "Edit", edit_task_path(task.id) %>
                </div>
                <div>
                    <% if current_user == task.user %>
                        <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
                    <% end %>
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate tasks %>
</ul>