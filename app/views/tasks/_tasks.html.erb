<ul class="list-unstyled">
    <% tasks.each do |task| %>
        <li class="media mb-3">
            <div class="media-body">
                <div>
                    <p><%= task.user.name %>
                </div>
                <div>
                    <p><%= task.content %> (<%= task.status %>)</p>
                </div>
                <div>
                    <p><%= link_to task.id, task %> を編集する</p>
                </div>
            </div>
        </li>
    <% end %>
    <%= paginate tasks %>
</ul>